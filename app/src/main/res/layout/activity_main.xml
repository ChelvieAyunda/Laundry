<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF5FF"
    tools:context=".MainActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/tvJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Pagi, Chelvie"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center" />

    <TextView
        android:id="@+id/tvtanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8 Januari 2025"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/tvJudul"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="210dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvtanggal">

        <TextView
            android:id="@+id/tvEstimasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estimasi Hari Ini"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 40.000,-"
            android:textSize="16dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_transaksi2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/tvTransaksi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="165dp"
            android:layout_marginStart="35dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_pelanggan"
            android:layout_marginStart="137dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/tvPelanggan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pelanggan"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="165dp"
            android:layout_marginStart="154dp"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_laporan"
            android:layout_marginStart="256dp"
            android:layout_marginTop="60dp"/>

        <TextView
            android:id="@+id/tvLaporan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Laporan"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="165dp"
            android:layout_marginStart="279dp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvMelayani"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siap Melayani Pelanggan Dengan Sepenuh Hati"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="310dp"
        android:gravity="center"/>

    <TextView
        android:id="@+id/tvPeringatan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jangan Kecewakan Pelanggan"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="368dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvLAkun"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toStartOf="@id/tvPeringatan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvPeringatan">

        <ImageView
            android:id="@+id/icAkun"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_akun"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/Akun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Akun"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="35dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvLlayanan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvLAkun"
        app:layout_constraintTop_toTopOf="@id/tvPeringatan">

        <ImageView
            android:id="@+id/icLayanan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_layanan2"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/layanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Layanan"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="25dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvLtambahan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvLlayanan"
        app:layout_constraintTop_toTopOf="@id/tvPeringatan">

        <ImageView
            android:id="@+id/icTambahan"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_tambahan"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/Tambahan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tambahan"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="16dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvLpegawai"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/tvLAkun"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tvLlayanan">

        <ImageView
            android:id="@+id/icPegawai"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_pegawai"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/Pegawai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pegawai"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="25dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvLcabang"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="28dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/tvLAkun"
        app:layout_constraintStart_toEndOf="@+id/tvLpegawai"
        app:layout_constraintEnd_toStartOf="@+id/tvLlayanan">

        <ImageView
            android:id="@+id/icCabang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_cabang"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/tvCabang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cabang"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="26dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/tvLprinter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="127dp"
        android:layout_marginStart="15dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tvLlayanan"
        app:layout_constraintTop_toTopOf="@id/tvLtambahan">

        <ImageView
            android:id="@+id/icPrinter"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_printer"
            android:layout_marginStart="25dp"
            android:layout_marginTop="17dp"/>

        <TextView
            android:id="@+id/tvPrinter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer"
            android:textSize="14sp"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"/>

    </androidx.cardview.widget.CardView>





</androidx.constraintlayout.widget.ConstraintLayout>