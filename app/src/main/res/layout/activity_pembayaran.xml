<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F2F5"
    tools:context="transaksi.MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintWidth_max="400dp"
        app:layout_constraintWidth_percent="0.9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_title_pembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="Pembayaran"
                android:textColor="#333333"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_subtitle_metode_pembayaran"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bottom_border"
                android:paddingBottom="12dp"
                android:text="Pilih Metode Pembayaran"
                android:textColor="#555555"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_bayar_nanti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#DC2626"
                    android:paddingVertical="12dp"
                    android:text="Bayar Nanti"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_tunai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#F97316"
                    android:paddingVertical="12dp"
                    android:text="Tunai"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_qris"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#EA580C"
                    android:paddingVertical="12dp"
                    android:text="QRIS"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_dana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#06B6D4"
                    android:paddingVertical="12dp"
                    android:text="DANA"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_gopay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:backgroundTint="#22C55E"
                    android:paddingVertical="12dp"
                    android:text="GoPay"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:cornerRadius="28dp" />

                <Button
                    android:id="@+id/btn_ovo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#6D28D9"
                    android:paddingVertical="12dp"
                    android:text="OVO"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    app:cornerRadius="28dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvBatal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:text="Batal"
                android:textColor="#2563EB"
                android:textSize="25sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>